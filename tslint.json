{
    "extends": [
        "tslint:latest",
        "tslint-eslint-rules"
    ],
    "jsRules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rules": {
        "no-unnecessary-class": true,
        "no-implicit-dependencies": [true, "dev"],
        "no-unbound-method": true,
        "prefer-conditional-expression": false,
        "no-boolean-literal-compare": true,
        "no-unnecessary-qualifier": true,
        "align": [true, "parameters", "statements", "arguments"],
        "no-inferrable-types": true,
        "eofline": true,
        "curly": true,
        "no-misused-new": true,
        "prefer-method-signature": true,
        "no-unnecessary-initializer": true,
        "import-spacing": true,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "no-console": false,
        "no-var-requires": false,
        "interface-name": [true, "never-prefix"],
        "no-namespace": [true, "allow-declarations"],
        "no-invalid-this": false,
        "trailing-comma": false,
        "only-arrow-functions": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space",
            "check-lowercase"
        ],
        "jsdoc-format": true,
        "indent": [
            true,
            "spaces"
        ],
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}
